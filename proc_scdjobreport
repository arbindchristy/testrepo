CREATE OR ALTER PROCEDURE sp_Send0600JobStatusReport
    @RecipientEmail NVARCHAR(255) = 'operations@company.com',
    @IncludeAllJobs BIT = 0  -- 0 = Issues only, 1 = All jobs
AS
BEGIN
    SET NOCOUNT ON;
    
    DECLARE @reportDate DATE = CAST(GETDATE() AS DATE);
    DECLARE @yesterdayDate DATE = DATEADD(DAY, -1, @reportDate);
    DECLARE @windowStart DATETIME = CAST(@yesterdayDate AS DATETIME) + '06:00';
    DECLARE @windowEnd DATETIME = CAST(@reportDate AS DATETIME) + '06:00';
    
    DECLARE @subject NVARCHAR(255);
    DECLARE @tableHTML NVARCHAR(MAX);
    
    -- Get summary counts for subject line
    DECLARE @totalJobs INT, @completedJobs INT, @failedJobs INT, @missedJobs INT;
    
    SELECT 
        @totalJobs = COUNT(*),
        @completedJobs = COUNT(CASE WHEN Status24H LIKE '‚úÖ%' THEN 1 END),
        @failedJobs = COUNT(CASE WHEN Status24H LIKE '‚ùå%' OR Status24H LIKE 'üî¥%' THEN 1 END),
        @missedJobs = COUNT(CASE WHEN Status24H LIKE '%MISSED%' THEN 1 END)
    FROM vw_daily_0600_job_report;
    
    SET @subject = 'Daily Job Report ' + CONVERT(VARCHAR(10), @yesterdayDate, 103) + 
                   ' 06:00-' + CONVERT(VARCHAR(5), @windowEnd, 108) + 
                   ' | ' + CAST(@completedJobs AS VARCHAR) + ' OK, ' + 
                   CAST(@failedJobs AS VARCHAR) + ' Issues';
    
    -- Build HTML report
    SET @tableHTML = 
        N'<html>
        <head>
            <style>
                body { font-family: Calibri, Arial, sans-serif; }
                h2 { color: #2c3e50; }
                h3 { color: #3498db; }
                table { border-collapse: collapse; width: 100%; margin: 10px 0; }
                th { background-color: #34495e; color: white; padding: 10px; text-align: left; }
                td { border: 1px solid #ddd; padding: 8px; }
                tr:nth-child(even) { background-color: #f8f9fa; }
                .attention { background-color: #fff3cd !important; border-left: 4px solid #ffc107; }
                .failed { background-color: #f8d7da !important; border-left: 4px solid #dc3545; }
                .success { background-color: #d4edda !important; border-left: 4px solid #28a745; }
                .summary-box { 
                    background-color: #e8f4fd; 
                    border: 1px solid #b6d4fe; 
                    padding: 15px; 
                    margin: 15px 0; 
                    border-radius: 5px;
                }
            </style>
        </head>
        <body>
        <h2>üìä Daily Job Status Report</h2>
        <div class="summary-box">
            <h3>üìÖ Report Window: ' + CONVERT(VARCHAR(16), @windowStart, 120) + ' to ' + 
                     CONVERT(VARCHAR(16), @windowEnd, 120) + '</h3>
            <p><strong>Summary:</strong></p>
            <ul>
                <li>Total Jobs Monitored: ' + CAST(@totalJobs AS VARCHAR) + '</li>
                <li>‚úÖ Successfully Completed: ' + CAST(@completedJobs AS VARCHAR) + '</li>
                <li>‚ö†Ô∏è Requiring Attention: ' + CAST(@failedJobs AS VARCHAR) + '</li>
                <li>‚è∞ Missed Executions: ' + CAST(@missedJobs AS VARCHAR) + '</li>
            </ul>
        </div>';
    
    -- Add jobs table based on filter
    IF @IncludeAllJobs = 1
    BEGIN
        SET @tableHTML = @tableHTML + 
            N'<h3>All Jobs Status</h3>' +
            N'<table>
                <tr>
                    <th>Job Name</th>
                    <th>Schedule</th>
                    <th>Time</th>
                    <th>Status (24h)</th>
                    <th>Last Run</th>
                    <th>Duration</th>
                    <th>Action Required</th>
                </tr>' +
            CAST( (
                SELECT 
                    td = JobName, '',
                    td = ScheduleType, '',
                    td = ScheduledTime, '',
                    td = Status24H, '',
                    td = ISNULL(CONVERT(VARCHAR(16), LastRunStart, 120), 'Not Run'), '',
                    td = ISNULL(LastRunDuration, 'N/A'), '',
                    td = ActionItem
                FROM vw_daily_0600_job_report
                ORDER BY 
                    CASE 
                        WHEN Status24H LIKE '%MISSED%' THEN 1
                        WHEN Status24H LIKE '%FAILED%' THEN 2
                        WHEN Status24H LIKE '‚úÖ%' THEN 3
                        ELSE 4
                    END,
                    ScheduledTime
                FOR XML PATH('tr'), TYPE 
            ) AS NVARCHAR(MAX) ) +
            N'</table>';
    END
    ELSE
    BEGIN
        SET @tableHTML = @tableHTML + 
            N'<h3>‚ö†Ô∏è Jobs Requiring Attention</h3>' +
            N'<table>
                <tr>
                    <th>Job Name</th>
                    <th>Schedule</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Last Run</th>
                    <th>Action Required</th>
                </tr>' +
            CAST( (
                SELECT 
                    td = JobName, '',
                    td = ScheduleType, '',
                    td = ScheduledTime, '',
                    td = Status24H, '',
                    td = ISNULL(CONVERT(VARCHAR(16), LastRunStart, 120), 'Not Run'), '',
                    td = ActionItem
                FROM vw_daily_0600_job_report
                WHERE Status24H NOT LIKE '‚úÖ%' 
                  AND Status24H != '‚ÑπÔ∏è NOT EXPECTED IN REPORT WINDOW'
                ORDER BY 
                    CASE 
                        WHEN Status24H LIKE '%MISSED%' THEN 1
                        WHEN Status24H LIKE '%FAILED%' THEN 2
                        ELSE 3
                    END,
                    ScheduledTime
                FOR XML PATH('tr'), TYPE 
            ) AS NVARCHAR(MAX) ) +
            N'</table>';
    END
    
    SET @tableHTML = @tableHTML + 
        N'<br/><hr/>
        <p style="color: #666; font-size: 12px;">
            Report generated at: ' + CONVERT(VARCHAR, GETDATE(), 120) + '<br/>
            Window: ' + CONVERT(VARCHAR(16), @windowStart, 120) + ' to ' + 
                     CONVERT(VARCHAR(16), @windowEnd, 120) + '
        </p>
        </body></html>';
    
    -- Send email
    EXEC msdb.dbo.sp_send_dbmail
        @profile_name = 'Database Mail Profile',
        @recipients = @RecipientEmail,
        @subject = @subject,
        @body = @tableHTML,
        @body_format = 'HTML',
        @importance = CASE WHEN @failedJobs > 0 THEN 'High' ELSE 'Normal' END;
    
    PRINT 'Report sent to ' + @RecipientEmail;
END
GO
